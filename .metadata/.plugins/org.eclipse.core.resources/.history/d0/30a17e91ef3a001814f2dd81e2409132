package com.homework180408practice;

import java.util.*;

public class SlotMachine extends Thread {

	private int[] temp = new int[3];
	Random random = new Random();

	@Override
	public void run() {
		// TODO Auto-generated method stub
		
			temp[0] = random.nextInt(9) + 1;
			System.out.println("-------------");
			System.out.print(temp[0]);
			run1();

	}

	public void run1() {

		temp[1] = random.nextInt(9) + 1;
		System.out.print("\t" + temp[1]);
		run2();

	}

	public void run2() {

		temp[2] = random.nextInt(9) + 1;
		System.out.print("\t" + temp[2]);
		System.out.println("\n-------------");

	}

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		
		SlotMachine sm = new SlotMachine();
		
		while(true) {
		sm.start();
		
		try {
			sm.join();
			if(sm.temp[0] == sm.temp[1] && sm.temp[1] == sm.temp[2]) {
				sm.interrupt();
			}
			//Thread.sleep(1000);
		} catch (InterruptedException ee) {
			// TODO: handle exception
		}
		
		}
		

	}

}
