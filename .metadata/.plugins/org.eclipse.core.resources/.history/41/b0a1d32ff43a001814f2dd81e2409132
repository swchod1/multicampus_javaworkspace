package com.homework180408practice;

import java.util.*;

public class SlotMachine extends Thread {

	private int[] temp = new int[3];
	Random random = new Random();

	

	@Override
	public void run() {
		// TODO Auto-generated method stub

		while(true) {
			
		if(SlotMachine.interrupted()) {
			break;
		}

		temp[0] = random.nextInt(3) + 1;
		System.out.println("-------------");
		System.out.print(temp[0]);
		run1();
		
		}

	}

	public void run1() {

		temp[1] = random.nextInt(3) + 1;
		System.out.print("\t" + temp[1]);
		run2();

	}

	public void run2() {

		temp[2] = random.nextInt(3) + 1;
		System.out.print("\t" + temp[2]);
		System.out.println("\n-------------");

	}
	
	public void run3() {
		
		if(temp[0] == temp[1] && temp[1] == temp[2]) {
			SlotMachine.interrupted();
		}
		
	}

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		
		SlotMachine sm = new SlotMachine();
		
		sm.start();
		
		try {
			
			sm.join();
			
			//Thread.sleep(1000);
		} catch (InterruptedException ee) {
			// TODO: handle exception
		}
		
		if(sm.temp[0] == sm.temp[1] && sm.temp[1] == sm.temp[2]) {
			sm.interrupt();
		}
		
		

	}

}
