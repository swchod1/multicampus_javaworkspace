package com.swingex;

import java.awt.*;

import javax.swing.*;

import javax.swing.border.*;

public class BorderEx extends JFrame {
	
	private JButton[] jb = new JButton[6];
	
	// private Icon icon = new ImageIcon("src/img/icon001.jpg");
	
	public BorderEx() {
		// TODO Auto-generated constructor stub
		
		super("다양한 선모양");
		
		Container con = this.getContentPane();
		
		con.setLayout(new GridLayout(3, 2, 10, 10));
		
		for(int i = 0; i < jb.length; i++) {
			jb[i] = new JButton(i + 1 + "번 버튼");
			// jb[i].
			con.add(jb[i]);
		}
		
		// 경계선 지우기
		EmptyBorder eb = new EmptyBorder(10, 10, 10, 10); // 숫자의 의미???
		jb[0].setBorder(eb);
		
		
		LineBorder lb = new LineBorder(Color.red, 5); // 숫자 -> 두께
		jb[0].setBorder(lb);
		
		setSize(300, 300);
		setVisible(true);
		setDefaultCloseOperation(JFrame.EXIT_ON_CLOSE);
		
	}

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		
		new BorderEx();

	}

}
