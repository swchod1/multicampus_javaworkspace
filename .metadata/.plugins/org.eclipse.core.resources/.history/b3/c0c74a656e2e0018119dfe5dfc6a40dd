package exexex;

import java.util.*;


public class Ex1 {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		
		Scanner sc = new Scanner(System.in);

		int x;

		System.out.print("행렬을 입력하세요 : ");
		x = sc.nextInt();

		int arr[][] = new int[x][x];
		int n = 1, i, j, k;

		for (i = 0, k = 1; n <= x; i++, k++) {
			for (j = 0; n <= x; j++) {
                
				
				if (j == arr[i].length - k) {
					for (i = k-1; i <= arr.length - k-1; i++) {
						arr[i][j] = n++;
					}
				} else if (i == arr.length - k) {
					for (j = arr[i].length - k-1; j >= k-1; j--) {
						arr[i][j] = n++;
					}
				} else if ((j == k) && i !=0) {
					for (i =  arr.length - k-1 ; i >= k ; i--) {
						arr[i][j] = n++;
					}					
				} else {
					arr[i][j] = n++;
				}

			}

		}
		
		
		for (i = 0 ; i < arr.length ; i++) {
			for (j = 0; j < arr[i].length; j++) {
				System.out.printf(arr[i][j]+"\t");
			}
			System.out.println();
		}
		
		

	}

}
