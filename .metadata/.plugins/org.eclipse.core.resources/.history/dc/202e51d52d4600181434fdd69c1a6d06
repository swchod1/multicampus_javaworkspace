package com.homework180421prac;

import java.awt.*;
import java.awt.event.*;
import javax.swing.*;

public class GaCal extends JFrame implements ActionListener {
	
	JTextField tf1 = new JTextField();
	JTextField tf2 = new JTextField();
	
	String[] str = {
			"", "", " ← ", " CE ", " C ", 
			"7", "8", "9", " / ", " √ ", 
			"4", "5", "6", " * ", " % ", 
			"1", "2", "3", " - ", " 1/x ", 
			"0", " ± ", ".", " + ", " = "
			
	};
	
	String temp;
	double d;
	long l;
	
	
	
	JButton[] jb = new JButton[str.length];
	
	public GaCal() {
		// TODO Auto-generated constructor stub
		
		super("계산기");
		
		Container con = this.getContentPane();
		con.setLayout(new BorderLayout(5, 5));
		
		
		Panel p1 = new Panel(new GridLayout(2, 1));
		
		p1.add(tf1);
		p1.add(tf2);
		
		tf1.setHorizontalAlignment(JTextField.RIGHT);
		tf2.setHorizontalAlignment(JTextField.RIGHT);
		
		tf1.setEditable(false);
		tf2.setEditable(false);
		
		
		Panel p2 = new Panel(new GridLayout(5, 5, 5, 5));
		
		for(int i = 0; i < jb.length; i++) {
			jb[i] = new JButton(str[i]);
			p2.add(jb[i]);
			jb[i].addActionListener(this);
		}
		
		con.add(p1, BorderLayout.NORTH);
		con.add(p2, BorderLayout.CENTER);
		
		
		setSize(350, 350);
		setResizable(false);
		setVisible(true);
		setDefaultCloseOperation(JFrame.EXIT_ON_CLOSE);
		
		tf1.setText("");
		tf2.setText("0");
	}
	
	
	@Override
	public void actionPerformed(ActionEvent e) {
		// TODO Auto-generated method stub
		
	
			
			for(int i = 0; i < jb.length; i++) {
				
			
				
				if(e.getSource() == jb[i]) {
					
					
					if(temp == null) {
						temp = jb[i].getText();
					} else {
						temp += jb[i].getText();
						
						if("+-*/".indexOf(temp) != -1) {
							tf1.setText(temp);
							tf2.setText(temp.substring(0, temp.length()-1));
						} else {
							tf2.setText(temp);
						}
						
						
					}
					
					
				}
				
				
			}
			
			
			
		
		
		
	}
	
	public static void main(String[] args) {
		new GaCal();
	}
	
	
}
